{
  "compilerOptions": {
    "declaration": true,
    "strictNullChecks": true,
    "target": "ES2022",
    "outDir": "dist",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": false,
    "skipDefaultLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "rootDir": "./src",
    "types": [
      "node",
      "mocha"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
